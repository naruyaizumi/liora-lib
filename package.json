{
	"name": "liora-lib",
	"version": "1.3.10",
	"description": "Native utility library for Liora WhatsApp Bot",
	"type": "module",
	"main": "export.js",
	"exports": {
		".": {
			"types": "./export.d.ts",
			"bun": "./export.js",
			"node": "./export.js",
			"default": "./export.js"
		}
	},
	"files": [
		"export.js",
		"export.d.ts",
		"core.js",
		"core.d.ts",
		"package.json",
		"README.md",
		"LICENSE",
		"build/Release/*.node",
		"build/Debug/*.node"
	],
	"engines": {
		"node": ">=22.0.0",
		"bun": ">=1.0.0"
	},
	"scripts": {
		"preinstall": "node -e \"console.log('Runtime:', typeof Bun !== 'undefined' ? 'Bun' : 'Node.js')\"",
		"install": "node core.js || bun core.js",
		"build": "npm run build:addon",
		"build:addon": "node-gyp configure build || echo 'node-gyp failed, trying prebuild install'",
		"build:ts": "tsc",
		"prepublishOnly": "npm run build:ts",
		"test:node": "node --test",
		"test:bun": "bun test",
		"test": "npm run test:node || npm run test:bun"
	},
	"license": "Apache-2.0",
	"author": {
		"name": "Naruya Izumi",
		"url": "https://linkbio.co/naruyaizumi"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/naruyaizumi/liora-lib.git"
	},
	"homepage": "https://github.com/naruyaizumi",
	"keywords": [
		"naruyaizumi",
		"liora-lib",
		"convert",
		"sticker",
		"webp",
		"fetch",
		"bun",
		"nodejs",
		"native-addon",
		"whatsapp-bot"
	],
	"devDependencies": {
		"node-addon-api": "^8.5.0",
		"node-gyp": "^11.4.2",
		"typescript": "^5.4.5",
		"@types/node": "^20.12.12",
		"@types/bun": "^1.0.0",
		"ts-node": "^10.9.2"
	},
	"optionalDependencies": {
		"node-gyp": "^11.4.2"
	},
	"packageManager": "pnpm@10.20.0"
}